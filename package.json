{
  "$schema": "https://enconvo.com/schemas/extension.json",
  "version": "0.0.8",
  "author": "ysnows",
  "license": "MIT",
  "categories": [
    "File"
  ],
  "type": "module",
  "name": "calender",
  "title": "Apple Events",
  "description": "Manage your schedule with Apple Events App like Calendar and Reminder.",
  "icon": "calender.png",
  "minAppVersion": "1.4.9",
  "commands": [
    {
      "name": "add_event_to_apple_calender",
      "title": "Add To Apple Calendar",
      "description": "Add an event to Apple Calendar.",
      "icon": "calender.png",
      "mode": "no-view",
      "aiPlugin": true,
      "accepts": [
        "text"
      ],
      "parameters": {
        "type": "object",
        "properties": {
          "input_text": {
            "type": "string",
            "description": "The text to be translated"
          }
        }
      },
      "preferences": [
        {
          "name": "llm",
          "description": "The model used to generate responses",
          "type": "extension",
          "required": false,
          "default": "default",
          "title": "LLM Provider"
        }
      ]
    },
    {
      "name": "add_event_to_apple_reminder",
      "title": "Add To Apple Reminder",
      "description": "Add an event to Apple Reminder.",
      "icon": "reminder.png",
      "mode": "no-view",
      "aiPlugin": true,
      "accepts": [
        "text"
      ],
      "parameters": {
        "type": "object",
        "properties": {
          "input_text": {
            "type": "string",
            "description": "The text to be translated"
          }
        }
      },
      "preferences": [
        {
          "name": "llm",
          "description": "The model used to generate responses",
          "type": "extension",
          "required": false,
          "default": "default",
          "title": "LLM Provider"
        }
      ]
    }
  ],
  "devDependencies": {
    "@enconvo/api": "^0.1.161",
    "@types/node": "^22.10.2",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  },
  "scripts": {
    "lint": "eslint src",
    "lint:fix": "npm run lint --fix",
    "format": "prettier --write \"**/*.ts\"",
    "format:check": "prettier --list-different \"**/*.ts\"",
    "build": "enconvo",
    "dev": "enconvo --dev"
  }
}
